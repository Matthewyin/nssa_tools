{
  "name": "nssa-tools",
  "version": "1.0.0",
  "description": "NSSA工具集 - 集成定时任务和网络拓扑生成工具",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "start": "node .output/server/index.mjs",
    "deploy:build": "npm run build",
    "deploy:check": "./scripts/pre-deploy-check.sh",
    "deploy:prod": "./scripts/deploy.sh",
    "deploy:dry": "DRY_RUN=true ./scripts/deploy.sh",
    "deploy": "npm run deploy:check && npm run deploy:prod",
    "github:setup": "./scripts/setup-github.sh",
    "github:push": "git add . && git commit -m 'Update' && git push"
  },
  "dependencies": {
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@pinia/nuxt": "^0.5.5",
    "dayjs": "^1.11.13",
    "firebase": "^10.14.1",
    "firebase-admin": "^13.4.0",
    "nuxt": "3.12.4",
    "pinia": "^2.2.6",
    "vue": "^3.5.16"
  },
  "devDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.48.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.9.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.48.0"
  }
}
